{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "maneloca",
  "version": "1.0.0",
  "identifier": "com.pzweuj.maneloca.stable",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ManeLoca",
        "width": 1240,
        "height": 770,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.svg"
    ],
    "resources": [],
    "externalBin": []
  }
}